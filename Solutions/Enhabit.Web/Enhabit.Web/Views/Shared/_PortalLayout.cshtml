<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <title>Enhabit - Portal</title>

    <!-- favicon -->
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/Portal/Content/ThirdParty")
    <link href="~/Content/ThirdParty/bootstrap-responsive.css" rel="stylesheet">
    <link href="~/Content/ThirdParty/base-admin-3-responsive.css" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet">

    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>

    <nav class="navbar navbar-inverse" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <i class="fa fa-bars"></i>
                </button>
                <a class="logo" href="/"><img src='/Images/EnhabitLogo_Beta.png' height="56" /></a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="account-nav dropdown" style="">
                        <a href="javascript:void()" class="dropdown-toggle" data-toggle="dropdown">
                            Account
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- ko foreach: $root.NavLinks -->
                            <li>
                                <a data-bind="click: $root.ChangeTab" style="cursor: pointer;">
                                    <i data-bind="css: LinkClass" class="fa" style="margin-right: 5px;"></i>
                                    <span data-bind="text: LinkName"></span>
                                </a>
                            </li>
                            <!-- /ko -->
                            <li class="menu-item scroll">
                                <a id="logout-btn" style="cursor: pointer;" href="/User/Logout?isFromPortal=true"><i class="fa fa-sign-out" style="margin-right: 5px;"></i>Log Out</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div> <!-- /.container -->
    </nav>

    <div class="subnavbar">
        <div class="subnavbar-inner">
            <div class="container">
                <a href="javascript:;" class="subnav-toggle" data-toggle="collapse" data-target=".subnav-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <i class="fa fa-bars"></i>
                </a>
                <div class="collapse subnav-collapse">
                    <ul class="mainnav" data-bind="foreach: $root.NavLinks">
                        <li data-bind="css: { 'active': Selected }">
                            <a data-bind="click: $root.ChangeTab" style="cursor: pointer;">
                                <i data-bind="css: LinkClass" class="fa"></i>
                                <span data-bind="text: LinkName"></span>
                            </a>
                        </li>
                    </ul>
                </div> <!-- /.subnav-collapse -->
            </div> <!-- /container -->
        </div> <!-- /subnavbar-inner -->
    </div> <!-- /subnavbar -->

    @RenderBody()

    <!-- All of our layout javascript files -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="~/Scripts/ThirdParty/jquery-migrate.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    @Scripts.Render("~/Portal/ThirdParty")
    <script src="~/Scripts/ThirdParty/pikaday.js"></script>
    <script src="~/Scripts/ThirdParty/pikaday.jquery.js"></script>
    <script src="//maps.googleapis.com/maps/api/js?libraries=places" type="text/javascript"></script>
    <script src="//www.paypalobjects.com/js/external/dg.js" type="text/javascript"></script>

    @Scripts.Render("~/Enhabit/Common")

    @Scripts.Render("~/Enhabit/Portal")

    <script>

            var portalViewModel;

            $(function ()
            {
                InitSpecialFields("#createListingModal");

                InitKnockoutBindings();
            });

            Dropzone.autoDiscover = false;

            function InitKnockoutBindings()
            {
                var portalData = JSON.parse($('#PortalViewModel').val());
                portalViewModel = ko.applyBindings(new PortalViewModel(portalData));
            }

            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-64824617-1', 'auto');
            ga('send', 'pageview');

    </script>

    <div class="footer">
	    <div class="container">
		    <div class="row">
			    <div id="footer-copyright" class="col-md-6">
				    &copy; Hyperion Group LLC & LbKStudios LLC. Designed &amp; Built by <a href="http://www.lbkstudios.net" target="_blank">LbKStudios LLC</a>
			    </div>
		    </div>
	    </div>
    </div>
</body>
</html>